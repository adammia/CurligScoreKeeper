<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="lyn_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Card Style -->
    <style name="lyn_layout.CardStyle">
        <item name="cardCornerRadius">@dimen/radius</item>
        <item name="cardElevation">@dimen/elevation</item>
    </style>
    <!-- Image Header -->
    <style name="lyn_layout.head_image">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/img_header</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- AppBar -->
    <style name="appBar">
        <item name="android:layout_height">@dimen/app_bar_height</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <!-- Collapsing Toolbar -->
    <style name="CollapsingToolbarLayout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- Button -->
    <style name="lyn_layout.btn_style">
        <item name="android:textColor">@color/btn_text</item>
    </style>

    <style name="lyn_layout.team_point">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">roboto-light</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/point_padding_b</item>
        <item name="android:textColor">@color/h_point_text</item>
        <item name="android:textSize">@dimen/point_text_size</item>
    </style>

    <style name="view_point">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/v_m</item>
        <item name="android:layout_marginTop">@dimen/v_m</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="layout_point">
        <item name="android:layout_width">@dimen/point_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="end_outs_row">
        <item name="android:layout_width">@dimen/point_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/point_text</item>

    </style>
    <!-- Dialog -->
    <style name="lyn_layout.layout_win">
        <item name="android:layout_marginTop">@dimen/c_ftop</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="dialog_icon">
        <item name="android:layout_width">@dimen/dlg_w</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:tint">@android:color/holo_blue_light</item>
        <item name="android:layout_marginTop">@dimen/c_fbottom</item>
        <item name="android:src">@drawable/ic_stat_gcs_notification</item>
    </style>

    <style name="dialog_text">
        <item name="android:layout_width">@dimen/dlg_w</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/holo_blue_light</item>
        <item name="android:textSize">@dimen/dlg_t</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="dialog_button">
        <item name="android:color">@color/md_material_blue_800</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/holo_blue_light</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
</resources>
