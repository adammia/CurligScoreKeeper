<?xml version="1.0" encoding="utf-8"?>
<resources>
        <style name="winner" parent="lyn_layout">
                <item name="android:fontFamily" >roboto-light</item>
                <item name="android:gravity">center</item>
                <item name="android:padding">@dimen/w_padding</item>
                <item name="android:text">team win</item>
                <item name="android:textAllCaps">true</item>
                <item name="android:textColor">#FFFFFF</item>
                <item name="android:textSize">@dimen/w_size</item>
                <item name="android:background">@android:color/holo_green_light</item>
        </style>
        <style name="team_name" parent="lyn_layout">
                <item name="android:fontFamily">roboto-medium</item>
                <item name="android:gravity">center</item>
                <item name="android:padding">@dimen/team_p</item>
                <item name="android:text">Team B</item>
                <item name="android:textColor">#616161</item>
                <item name="android:textSize">@dimen/team_size</item>
        </style>
        <style name="lyn_layout.team_point" parent="lyn_layout">
                <item name="android:fontFamily">roboto-light</item>
                <item name="android:gravity">center</item>
                <item name="android:paddingBottom">@dimen/point_padding_b</item>
                <item name="android:text">0</item>
                <item name="android:textColor">#000000</item>
                <item name="android:textSize">@dimen/point_text_size</item>
        </style>
        <style name="bp_head">
                <item name="android:layout_width">@dimen/point_width</item>
                <item name="android:layout_height">wrap_content</item>
                <item name="android:fontFamily">roboto-medium</item>
                <item name="android:textColor">#000000</item>
                <item name="android:textSize">@dimen/bp_size</item>
        </style>
</resources>